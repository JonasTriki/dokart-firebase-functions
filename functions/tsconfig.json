{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": [
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "custom_types"]
  },
  "exclude": ["node_modules", "custom_types"],
  "compileOnSave": true,
  "include": [
    "src"
  ],
}
